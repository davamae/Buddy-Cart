<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".shoppingPage">

    <EditText
        android:id="@+id/seachbarMain"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:drawableLeft="?android:attr/actionModeWebSearchDrawable"
        android:ems="10"
        android:hint="Search"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/favBtn"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:backgroundTint="@color/off_white"
        android:drawableLeft="@drawable/baseline_favorite_border_24"
        android:paddingLeft="4dp"
        android:text="Favourites"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:iconSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seachbarMain"
        app:strokeColor="@color/black"
        app:strokeWidth="@dimen/material_emphasis_high_type" />

    <Button
        android:id="@+id/historyBtn"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:backgroundTint="@color/off_white"
        android:drawableLeft="@drawable/baseline_history_24"
        android:paddingLeft="4dp"
        android:text="History"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/favBtn"
        app:layout_constraintTop_toBottomOf="@+id/seachbarMain"
        app:strokeColor="@color/black"
        app:strokeWidth="@dimen/material_emphasis_high_type" />

    <Button
        android:id="@+id/ordersBtn"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:backgroundTint="@color/off_white"
        android:drawableLeft="@drawable/baseline_format_list_bulleted_24"
        android:paddingLeft="4dp"
        android:text="Orders"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/historyBtn"
        app:layout_constraintTop_toBottomOf="@+id/seachbarMain"
        app:strokeColor="@color/black"
        app:strokeWidth="@dimen/material_emphasis_high_type" />
</androidx.constraintlayout.widget.ConstraintLayout>